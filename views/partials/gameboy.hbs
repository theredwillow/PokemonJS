<script src="scripts/controls.js"></script>
<script src="scripts/optimizedResize.js"></script>
<script>

    var gameboy;
    var gameboyScreen;
    var menuOptions;

    var defineVariables = function() {
        gameboy = document.getElementById("gameboy");
        gameboyScreen = document.getElementById("gameboy_screen");
        menuOptions = document.getElementsByClassName("menu_option");

        {{#unless user}}
        gameboyScreen.style.backgroundColor = "black";
        {{/unless}}

        changeGBWidth();

    };
    window.addEventListener("load", defineVariables);

    var changeGBWidth = function() {
        var gbHeight = gameboy.getBoundingClientRect().height;
        gameboy.style.width = 0.62 * gbHeight;
    };
    window.addEventListener("optimizedResize", changeGBWidth);

</script>

<div id="gameboy">

    <div id="gameboy_screen">
        {{> screen}}
    </div>

    <div id="a_button" class="round_button"
        onclick="document.dispatchEvent(keydownEvents['a']);"></div>
    <div id="b_button" class="round_button"
        onclick="document.dispatchEvent(keydownEvents['b']);"></div>

    <div id="up_button" class="directional_button"
        onclick="document.dispatchEvent(keydownEvents['up']);"></div>
    <div id="down_button" class="directional_button"
        onclick="document.dispatchEvent(keydownEvents['down']);"></div>
    <div id="left_button" class="directional_button"
        onclick="document.dispatchEvent(keydownEvents['left']);"></div>
    <div id="right_button" class="directional_button"
        onclick="document.dispatchEvent(keydownEvents['right']);"></div>

    <div id="start_button" class="setting_button"
        onclick="document.dispatchEvent(keydownEvents['start']);"></div>
    <div id="select_button" class="setting_button"
        onclick="document.dispatchEvent(keydownEvents['select']);"></div>

</div>
